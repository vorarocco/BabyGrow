<div style="margin: 2% 10% 20% 10% ;">
    <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group me-2" role="group" aria-label="First group">
    
            <a class="grow" href="/babyprofile/newprofile">
              <img style="width: 80%;" src="/img/addbaby.jpg" class="img-fluid center" alt="...">
                <!-- <button type="button" class="btn btn-outline-secondary">Create New Baby Profile</button> -->
            </a>
    
        </div>
</div>



  <div style="width: 100%;" class="center" >
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% findBaby.forEach((baby,id)=>{ %>
        <div class="col">
          <div  class="card">

            <a href="/baby/<%= baby.id %>">
              <img src="/img/babyprofile1.jpg" class="card-img-top" alt="...">
            </a>
            
            <div class="card-body">
              <h5 class="card-title">Name: <%=baby.name%></h5>
              <p class="card-text">Gender: <%=baby.gender%></p>
              <p class="card-text">Birthday: <%=baby.dateOfBirth%></p>
      
              <div class="btn-group center" role="group" aria-label="Basic mixed styles example">
                <a href="/baby/<%= baby.id %>">
                  <button type="submit" class="btn btn-outline-success">Add</button>
                </a>
                <form action='/babyprofile/<%= baby.id %>?_method=DELETE' method="POST">
                  <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
                <a href="/babyprofile/<%= baby.id %>/editBaby">
                  <button type="submit" class="btn btn-outline-warning">Edit</button>
                </a>
      
              </div>
            </div>
          </div>
        </div>
        <%  }) %>
      </div>
  </div>



    





